<header class="tm-custom-header">
  <!--  <div class="topbar">
  <div class="container"></div>
  </div> --><div class="top">
    <div class="container">
      <div class="inner" style="justify-content: {{ section.settings.header_logo_position }}">
        <a href="{{ shop.secure_url }}" class="logo">
          {%- if section.settings.header_logo_image -%}
            <img src="{{ section.settings.header_logo_image | img_url: '300x300' }}" alt="{{ image.alt | escape }}">
          {% else %}
            {{ section.settings.header_logo_text }}
          {% endif %}
        </a>
        <button class="menu-toggle">
          <ion-icon name="menu-outline"></ion-icon>
          <ion-icon name="close-outline"></ion-icon>
        </button>
      </div>
    </div>
  </div>

  <div class="mega-menu">
    <div class="mega-menu-top">
      <div class="container">
        <div class="inner">
          <div class="nav-wrap">
            <nav>
              <ul>
                {% assign count = 0 %}
                {% for link in linklists[section.settings.created_menu_list].links %}
                  <li>
                    {% comment %}
                    for submenu
                    {% endcomment %}
                    {% if link.links != blank %}

                      <div class="aWrap">
                        <a href="{{ link.url }}">{{ link.title }}</a>
                        <button class="toggleSubmenu">
                          <ion-icon name="chevron-down-outline"></ion-icon>
                        </button>
                      </div>

                      <div class="mega-menu-full">
                        <div class="container">

                          {% comment %} submenu wrapper {% endcomment %}
                          <div class="inner">
                            <ul class="submenu">
                              {% for child_link in link.links %}
                                <li>


                                  {% if child_link.links != blank %}

                                    {% comment %} if li has submenu then show dropdown{% endcomment %}
                                    <div class="aWrap">
                                      <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                                      <button class="toggleSubmenu">
                                        <ion-icon name="chevron-down-outline"></ion-icon>
                                      </button>
                                    </div>

                                    {% comment %}
                                    for nested submenu
                                    {% endcomment %}
                                    <ul class="nested-submenu">
                                      {% for grandchild_link in child_link.links %}
                                        <li>

                                          {% if grandchild_link.links != blank %}
                                            {% comment %} if li has submenu then show dropdown{% endcomment %}
                                            <div class="aWrap">
                                              <a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                                              <button class="toggleSubmenu">
                                                <ion-icon name="chevron-down-outline"></ion-icon>
                                              </button>
                                            </div>


                                            {% comment %}grandchild_link else{% endcomment %}
                                          {% else %}
                                            <a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                                          {% endif %}

                                        </li>
                                      {% endfor %}
                                    </ul>

                                    {% comment %}child_link else{% endcomment %}
                                  {% else %}
                                    <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                                  {% endif %}


                                </li>
                              {% endfor %}
                            </ul>
                            <div class="single-product">
                              {% if count == 0 %}
                                {% assign singleProduct = section.settings.shop-by-header-product %}
                              {% elsif count == 1 %}
                                {% assign singleProduct = section.settings.shop-retail-header-product %}
                              {% else %}
                                {% assign singleProduct = section.settings.shop-marketplace-product %}
                              {% endif %}
                              {% assign count = count | plus: 1 %}

                              <a href="{{ singleProduct.url }}">
                                <div class="img-box">
                                  <img src="{{ singleProduct.featured_image | img_url: '600x600' }}" alt="{{product.featured_image.alt}}" />
                                </div>
                                <div class="details">
                                  <h4>{{ singleProduct.title }}</h4>
                                  <p>Shop Now</p>
                                </div>
                              </a>
                            </div>
                          </div>
                        </div>
                      </div>


                      {% comment %}link else{% endcomment %}
                    {% else %}
                      <a href="{{ link.url }}">{{ link.title }}</a>
                    {% endif %}


                  </li>
                {% endfor %}
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>


  </div>
</header>